---
import Layout from "@layouts/Layout.astro";

interface Props {
    title: string;
}

const estadisticas = [
    {name: 'Goles', url : '/estadisticas/goles'},
    {name: 'Asistencias', url : '/estadisticas/asistencias'},

]
const {title} = Astro.props;

const urlPath = Astro.url;

console.log(urlPath);
---

    <article class="relative ">
        <div class="absolute bg-page-init w-full h-[150px] "></div>>

        </div>
        <h2 class=" relative title-page">{title}</h2>
        <section class=" relative grid grid-cols-3  container mx-auto px-3 max-w-[1080px]">

            <!-- NavegaciÃ³n -->
            <div class="w-[140px] py-5 pl-1 bg-gray-50 dark:bg-(--color-purple) rounded-2xl">
                {
                    estadisticas.map(est => (
                        <a 
                        href={est.url}
                        
                        class="flex dark:text-white">
                            
                            {
                                urlPath.pathname === est.url && (
                                    <div class="border-l-2 mr-0" transition:name="tr-estadisticas-links"></div>
                                )
                            }
                            {
                                urlPath.pathname !== est.url && (
                                    <div class="invisible border-l-2 mr-0"></div>
                                )
                            }
                            <span  class="pl-3"> {est.name}</span>
                        </a>
                    ))
                }
            </div>
            <!-- Tabla de posiciones -->
            <div class="">
                <table>
                    <thead>
                        <tr class="w-[60px] border">a</tr>
                        <tr class="w-[10px] border">PJ</tr>
                        <tr class="w-[10px] border">{title}</tr>
                    </thead>
                </table>
            </div>

            <!-- Imagen -->
            <div>
                {urlPath.pathname}
                {
                    urlPath.pathname === '/estadisticas/goles' && (
                        <img src="/statistics/goles.webp" alt="goles" transition:name="img-goles" class="mask-fade-bottom"/>
                    )
                }
                {
                    urlPath.pathname === '/estadisticas/asistencias' && (
                        <img src="/statistics/asistencias.webp" alt="asistencias" transition:name="img-asistencias" class="mask-fade-bottom"/>
                    )
                }

            </div>

        </section>
    </section>
