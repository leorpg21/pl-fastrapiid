---
import { ClientRouter } from 'astro:transitions';
import Footer from '@components/default/Footer.astro';
import Header from '@components/default/Header.astro';
import '@styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---



<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<ClientRouter />
	</head>
	<body class="bg-white dark:bg-[rgb(81,50,158)]">
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	@reference '../styles/global.css';

	.bg-page-init {
		@apply bg-gradient-to-b from-[rgba(109,56,241,0.8)] dark:from-[rgba(10,2,31,0.8)]  to-[rgba(255,0,0,0)] dark:to-[rgb(81,50,158)]  h-screen w-full
	}
	.bg-pag-m {
		@apply bg-gradient-to-b from-[rgba(109,56,241,0.8)] dark:from-[rgba(10,2,31,0.8)] from-0%  via-[rgba(255,0,0,0)] dark:via-[rgb(81,50,158)] via-20% to-[rgba(255,0,0,0)] dark:to-[rgb(81,50,158)] to-30% h-screen w-full;
	}
</style>
